# Ask the user to input their numbers
num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))

# Ask the user to select an operation
print("Select operation:")
print("1. Add")
print("2. Subtract")
print("3. Multiply")
print("4. Divide")

operation = int(input("Enter your choice (1/2/3/4): "))

# Perform the selected operation
if operation == 1:
    result = num1 + num2
elif operation == 2:
    result = num1 - num2
elif operation == 3:
    result = num1 * num2
elif operation == 4:
    result = num1 / num2
else:
    print("Invalid operation. Please try again.")
    exit()

# Display the result
print(f"{num1} {choices[operation]} {num2} = {result}")
